[user]
    name = Sasha Friedrich
    useConfigOnly = true
[core]
    autocrlf = false
    preloadindex = true
[color]
	ui = auto
[alias]
	graph = log --graph --oneline --decorate
	ff = merge --ff-only
	zip = archive --format=zip
	dt = difftool
	ga = log --oneline --decorate --graph --all
	gr = log --oneline --decorate --graph
	co = checkout
    ci = commit
    cp = cherry-pick
	st = status
    df = diff
    dfc = diff --cached
	cam = commit --amend
	append = commit --amend --no-edit
    kill-branch = !git push --delete origin "$@" && git branch -d
    pl = log --reverse -p
    graphy = log --graph --oneline --decorate
    subinit = submodule update --init --recursive
[diff]
	tool = meld
	algorithm = patience
	submodule = short
[color "sh"]
	branch = yellow bold
	dirty = red bold
[push]
	default = current
	recurseSubmodules = check
[merge]
	ff = false
	conflictStyle = diff3
[fetch]
	prune = true
	writeCommitGraph = true
[pull]
	rebase = false
[init]
	defaultBranch = main
